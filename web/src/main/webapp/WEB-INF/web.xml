<!-- web application deployment descriptor, needed for config that cannot be set using annotations -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- define existing roles -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>manager</role-name>
    </security-role>

    <!-- protect URLs -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Authentication for admin</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Authentication for manager</web-resource-name>
            <url-pattern>/home</url-pattern>
            <url-pattern>/manager</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- define authentication method, can be BASIC or FORM -->
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/app/components/home/home.html</form-login-page>
            <!-- <form-error-page>/WEB-INF/hidden-jsps/login-failed.jsp</form-error-page> -->
        </form-login-config>
    </login-config>
</web-app>